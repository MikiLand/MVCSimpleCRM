@model Tasks

<script type="text/javascript">
    function openModal(ModalType) {

        if (ModalType == 1) {
            $('#ModalDelete').modal('show');
        }
        else if (ModalType == 2) {
            $('#ModalError').modal('show');
        }
        else if (ModalType == 3) {
            $('#ModalSuccess').modal('show');
        }
    }

    function closeModal(ModalType) {

        if (ModalType == 1) {
            $('#ModalDelete').modal('hide');
        }
        else if (ModalType == 2) {
            $('#ModalError').modal('hide');
        }
        else if (ModalType == 3) {
            $('#ModalSuccess').modal('hide');
        }
    }
</script>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <center>
                                    <h3 class="card-title">Podgląd zadania</h3>
                                </center>
                            </div>
                        </div>
                        <a type="btn" style="float: right; padding-right: 10px; padding-left:10px;" class="btn btn-sm btn-outline-secondary" asp-controller="Tasks" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
                        <a type="btn" style="float: right; padding-right: 10px; padding-left:10px;" class="btn btn-sm btn-outline-secondary" onclick="openModal(1)">Usuń</a>
                        <div class="row">
                            <div class="col">
                                <center>
                                    <hr />
                                </center>
                            </div>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="IDUserCreate" hidden="True" readonly="True" class="form-control" value="1">
                        <div class="row">
                            <div class="col-md-10">
                                <center>
                                    <label asp-for="Title">Tytuł</label>
                                </center>
                                <input asp-for="Title" class="form-control" placeholder="Uzupełnij tytuł zadania">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <center>
                                    <label asp-for="CreatorStatus">Status tworzącego</label>
                                </center>
                                <div class="input-group col-md-3" style="margin-bottom: 20px">
                                    <input asp-for="CreatorStatus" class="form-control" value="UTW">
                                    <div class="dropdown m-1 mt-0 mb-0">
                                        <a class="btn btn-secondary dropdown-toggle" style="width: 80px" href="#" role="button" id="DDType" data-bs-toggle="dropdown" aria-expanded="false">
                                            Zmień
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink" ID="DDLProductType" onselect="DDLProductTypeOnSelect">
                                            <li><a class="dropdown-item" OnClick="ToProduct('Candles')">UTW - Utworzony</a></li>
                                            <li><a class="dropdown-item" OnClick="ToProduct('Scents')">PRZ - Przypisany</a></li>
                                            <li><a class="dropdown-item" OnClick="ToProduct('Other')">WRZ - W realizacji</a></li>
                                            <li><a class="dropdown-item" OnClick="ToProduct('Other')">ZAK - Zakończony</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <span asp-validation-for="CreatorStatus" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-2">
                                <center>
                                    <label asp-for="CreateDate">Data utworzenia</label>
                                </center>
                                <input type="date" asp-for="CreateDate" class="form-control" value="2018-07-22" min="2000-01-01" max="2060-12-31">
                                <span asp-validation-for="CreateDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <center>
                                    <label asp-for="DueDate">Termin realizacji</label>
                                </center>
                                <input type="date" asp-for="DueDate" class="form-control" value="2018-07-22" min="2000-01-01" max="2060-12-31">
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">

                            </div>
                            <div class="col-md-2">
                                <center>
                                    <label asp-for="Status">Status pracownika</label>
                                </center>
                                <div class="input-group col-md-3" style="margin-bottom: 20px">
                                    <input asp-for="Status" class="form-control" value="NZR">
                                    <div class="dropdown m-1 mt-0 mb-0">
                                        <a class="btn btn-secondary dropdown-toggle" style="width: 80px" href="#" role="button" id="DDType" data-bs-toggle="dropdown" aria-expanded="false">
                                            Zmień
                                        </a>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink" ID="DDLProductType" onselect="DDLProductTypeOnSelect">
                                            <li><a class="dropdown-item" OnClick="ToProduct('Candles')">NZR - Niezrealizowany</a></li>
                                            <li><a class="dropdown-item" OnClick="ToProduct('Other')">WRZ - W realizacji</a></li>
                                            <li><a class="dropdown-item" OnClick="ToProduct('Other')">ZAK - Zakończony</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <center>
                                    <label asp-for="Description">Opis zadania</label>
                                </center>
                                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Uzupełnij opis zadania"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        

                        <div class="row">
                            <div class="col">
                                <center>
                                    <hr />
                                </center>
                            </div>
                        </div>

                        <!--ForEach is needed to be added in later stages-->
                            <div class="card mb-4 box-shadow">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-1">
                                                    <img class="card-img-top" src="https://placehold.co/20x20" alt="UserImage" maxwidth="20" maxheighe="20">
                                                </div>
                                                <div class="col-md-1">
                                                    <!--<p class="card-text"><span>&#64;</span>USERNAME PLACEHOLDER</p>-->
                                                <p class="card-text" style="display: flex; width: 50%; height: 100%; align-items:center; justify-content:center;"><span>&#64;</span>TEST</p>
                                                </div>
                                                <div class="col-md-9">
                                                    <!--<p class="card-title" style="font-size:larger;">USERNAME USERSURNAME PLACEHOLDER</p>-->
                                                <p class="card-title" style="display: flex; width: 50%; height: 100%; align-items:center; justify-content:center;">TEST TEST</p>
                                                </div>
                                                <div class="col-md-1">
                                                <button type="button" class="btn btn-sm btn-outline-danger" style="width: 100px; float: right; display: flex; height: 100%; align-items:center; justify-content:center;">Usuń</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <!-- ForEach end here-->

                        <a type="btn" style="padding-right: 10px; height: 100%; display: flex; align-items:center; justify-content:center; margin-top: -20px" class="btn btn-sm btn-outline-secondary" asp-controller="Tasks" asp-action="Create">Dodaj użytkownika</a>

                        <div class="d-flex" style="padding-top: 20px;">
                            <div class="btn-group">
                                <button type="submit" class="btn btn-outline-primary">Utwórz</button>
                                <a class="btn btn-outline-secondary" asp-controller="Tasks" asp-action="Index">Anuluj</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ModalDelete -->
    <div class="modal fade" id="ModalDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Usunięcie zadania</h5>
                </div>
                <div class="modal-body">
                    <p>Usuniecie użytkownika jest nieodwracalne! Czy na pewno chcesz usunąć to zadanie?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" data-dismiss="modal" onclick="closeModal(1)">Anuluj</button>
                    <form action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Potwierdzam" class="btn btn-outline-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- ModalSuccess -->
    <div class="modal fade" id="ModalSuccess" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <img class="card-img-top" src="https://placehold.co/200x100" alt="UserImage" width="50" heighe="50">
                    <p>Powodzenie</p>
                    <p>Użytkownik został usunięty.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Kontynuuj</button>
                </div>
            </div>
        </div>
    </div>

    <!-- ModalFailier -->
    <div class="modal fade" id="ModalFailier" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <img class="card-img-top" src="https://placehold.co/200x100" alt="UserImage" width="50" heighe="50">
                    <p>Niepowodzenie</p>
                    <p>Użytkownik nie został usunięty.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Kontynuuj</button>
                </div>
            </div>
        </div>
    </div>
</form>
