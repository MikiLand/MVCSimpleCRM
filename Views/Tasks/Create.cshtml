@{
}

<form method="post" asp-action="Create">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <center>
                                    <h3 class="card-title">Nowe zadanie</h3>
                                </center>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <center>
                                    <hr />
                                </center>
                            </div>
                        </div>

                        <form asp-action="Register">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="row">
                                <div class="col-md-10">
                                    <center>
                                        <label asp-for="Title">Tytuł</label>
                                    </center>
                                    <input asp-for="Title" class="form-control" placeholder="Tytuł zadania">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="col-md-2">
                                    <center>
                                        <label asp-for="CreatorStatus">Status tworzącego</label>
                                    </center>
                                    <input asp-for="CreatorStatus" class="form-control" placeholder="PLACEHOLDER DDL">
                                    <span asp-validation-for="CreatorStatus" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-2">
                                    <center>
                                        <label asp-for="CreateDate">Data utworzenia</label>
                                    </center>
                                    <input type="date" asp-for="CreateDate" class="form-control" value="2018-07-22" min="2000-01-01" max="2060-12-31">
                                    <span asp-validation-for="CreateDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-2">
                                    <center>
                                        <label asp-for="DueDate">Termin realizacji</label>
                                    </center>
                                    <input type="date" asp-for="DueDate" class="form-control" value="2018-07-22" min="2000-01-01" max="2060-12-31">
                                    <span asp-validation-for="DueDate" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">

                                </div>
                                <div class="col-md-2">
                                    <center>
                                        <label asp-for="Status">Status pracownika</label>
                                    </center>
                                    <input asp-for="Status" class="form-control" placeholder="PLACEHOLDER DDL">
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <center>
                                        <label asp-for="Description">Opis zadania</label>
                                    </center>
                                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Opis zadania"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-flex" style="padding-top: 20px;">
                                <div class="btn-group">
                                    <button type="submit" class="btn btn-outline-primary">Utwórz</button>
                                    <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Index">Anuluj</a>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col">
                                    <center>
                                        <hr />
                                    </center>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-md-10">
                                    <center>
                                        <label asp-for="Title">Tytuł</label>
                                    </center>
                                    <input asp-for="Title" class="form-control" placeholder="Tytuł zadania">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="col-md-2">
                                    <center>
                                        <label asp-for="CreatorStatus">Status tworzącego</label>
                                    </center>
                                    <input asp-for="CreatorStatus" class="form-control" placeholder="PLACEHOLDER DDL">
                                    <span asp-validation-for="CreatorStatus" class="text-danger"></span>
                                </div>
                            </div>

                            <!--@foreach (var item in Model)
                            {
                                <div class="card mb-4 box-shadow">-->
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col-md-1">
                                                        <img class="card-img-top" src="https://placehold.co/20x20" alt="UserImage" width="200" heighe="200">
                                                    </div>
                                                    <div class="col-md-1">
                                                        <!--<p class="card-text"><span>&#64;</span>@item.UserName</p>-->
                                                        <p class="card-text"><span>&#64;</span>TEST</p>
                                                    </div>
                                                    <div class="col-md-9">
                                                        <!--<p class="card-title" style="font-size:larger;">@item.Name @item.Surname</p>-->
                                                        <p class="card-title" style="font-size:larger;">TEST TEST</p>
                                                    </div>
                                                    <div class="col-md-1">
                                                        <button type="button" class="btn btn-sm btn-outline-danger" style="width: 100px; float: right;">Usuń</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <!--</div>
                            }-->

                            <div class="d-flex" style="padding-top: 20px;">
                                <div class="btn-group">
                                    <button type="submit" class="btm btn-outline-primary">Aktualizuj</button>
                                    <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Detail" asp-route-id="@Model.Id">Anuluj</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
